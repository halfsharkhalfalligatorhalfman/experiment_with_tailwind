{
  "name": "tailwind-v3-benchmark",
  "version": "1.0.0",
  "description": "Tailwind CSS 3.x benchmark app for migration testing",
  "main": "index.js",
  "scripts": {
    "build": "postcss src/styles.css -o dist/styles.css",
    "watch": "postcss src/styles.css -o dist/styles.css --watch",
    "dev": "live-server --port=8080 --entry-file=index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "autoprefixer": "^10.4.16",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "dependencies": {
    "live-server": "^1.2.2"
  }
}